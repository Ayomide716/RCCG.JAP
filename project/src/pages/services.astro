---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Services">
  <div class="max-w-7xl mx-auto px-4 py-16">
    <h1 class="font-serif text-4xl text-church-brown mb-8">Our Services</h1>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="font-serif text-2xl text-church-brown mb-4">Sunday Morning Worship</h2>
        <p class="text-gray-700 mb-4">Join us every Sunday at:</p>
        <ul class="list-disc list-inside text-gray-700 mb-4">
          <li>9:00 AM - Traditional Service</li>
          <li>11:00 AM - Contemporary Service</li>
        </ul>
        <p class="text-gray-700">Children's ministry available during both services</p>
      </div>

      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="font-serif text-2xl text-church-brown mb-4">Wednesday Bible Study</h2>
        <p class="text-gray-700 mb-4">Every Wednesday at 7:00 PM</p>
        <p class="text-gray-700">In-depth Bible study and discussion for all ages</p>
      </div>

      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="font-serif text-2xl text-church-brown mb-4">Youth Ministry</h2>
        <p class="text-gray-700 mb-4">Friday nights at 6:30 PM</p>
        <p class="text-gray-700">Dynamic program for teens grades 6-12</p>
      </div>
    </div>
  </div>
</Layout>