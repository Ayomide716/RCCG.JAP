---
import Layout from '../layouts/Layout.astro';

const events = [
  {
    title: "Community Picnic",
    date: "June 15, 2024",
    time: "12:00 PM",
    description: "Join us for food, fellowship, and fun at our annual community picnic.",
    media: [
      {
        type: "image",
        url: "https://images.unsplash.com/photo-1511632765486-a01980e01a18",
        caption: "Last year's community picnic"
      },
      {
        type: "video",
        url: "https://player.vimeo.com/video/123456789",
        caption: "Highlights from previous picnics"
      }
    ]
  },
  {
    title: "Vacation Bible School",
    date: "July 10-14, 2024",
    time: "9:00 AM - 12:00 PM",
    description: "A week of fun and learning for children ages 5-12.",
    media: [
      {
        type: "image",
        url: "https://images.unsplash.com/photo-1503454537195-1dcabb73ffb9",
        caption: "VBS activities"
      }
    ]
  },
  {
    title: "Marriage Conference",
    date: "August 5-6, 2024",
    time: "6:00 PM",
    description: "A special two-day conference focused on building strong marriages.",
    media: [
      {
        type: "image",
        url: "https://images.unsplash.com/photo-1529634597503-139d3726fed5",
        caption: "Previous marriage conference"
      }
    ]
  }
];
---

<Layout title="Events">
  <div class="max-w-7xl mx-auto px-4 py-16">
    <h1 class="font-serif text-4xl text-church-brown mb-8">Upcoming Events</h1>
    
    <div class="space-y-12">
      {events.map(event => (
        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h2 class="font-serif text-2xl text-church-brown mb-2">{event.title}</h2>
              <p class="text-church-gold font-semibold mb-2">{event.date}</p>
              <p class="text-gray-600 mb-2">{event.time}</p>
              <p class="text-gray-700">{event.description}</p>
            </div>
            
            <div class="space-y-6">
              {event.media.map(item => (
                <div>
                  {item.type === 'image' ? (
                    <img
                      src={item.url}
                      alt={item.caption}
                      class="w-full h-64 object-cover rounded-lg"
                    />
                  ) : (
                    <div class="aspect-video">
                      <iframe
                        src={item.url}
                        class="w-full h-full rounded-lg"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen
                      ></iframe>
                    </div>
                  )}
                  <p class="mt-2 text-sm text-gray-600 italic">{item.caption}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>